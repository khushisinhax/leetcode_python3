class Solution:
    def isPalindrome(self, x: int) -> bool:
    if x< 0:  #negative nums are not palindrone
	  return False
	
	x=str(x)  #convert to string
	l,r=0, len(x)=-1 #calculate index of first and last string
	while l <r :
	   if x[l] != x[r]:
	     return false
	   l+=1
	   r-=1
	return true

 
